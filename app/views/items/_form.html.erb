<div class="container py-5" style="max-width: 540px">
  <h2>New Item</h2>
  <%= form_with model: [Collection.new, Item.new], url: collection_items_path, local: true do |f| %>
    <div>
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div>
      <%= f.label :tag, class: "form-label" %>
      <%= f.text_field :description, class: "form-control" %>
    </div>

    <%= f.submit "Submit item", class: "btn btn-primary rounded-pill" %>
  <% end %>
</div>