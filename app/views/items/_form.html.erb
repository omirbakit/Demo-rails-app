<div class="container py-5" style="max-width: 540px">
  <h2>New Item for <%= @collection.name %></h2>
  
  <%= form_with(model: [collection, collection.items.build]) do |f| %>
    <div>
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div>
      <%= f.label :tag, class: "form-label" %>
      <%= f.text_field :tag, class: "form-control" %>
    </div>

    <div class="mt-2">
      <%= f.submit "Submit item", class: "btn btn-primary rounded-pill" %>
    </div>
  <% end %>
</div>

