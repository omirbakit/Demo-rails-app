<div class="row mt-3">
  <h2><%= @collection.name %> -> Items</h2>
</div>

<% if current_user %>
  <div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <h1><%= link_to 'New Item', new_collection_item_path(@collection), class: 'btn btn-primary' %></h1>
  </div>
<% end %>

<div class="row mt-2 mb-5">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Tag</th>
        <th scope="col">Created</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @collection.items.each do |item| %>
        
          <tr>
            <td><%= item.name %></td>
            <td><%= item.tag %></td>
            <td><%= item.created_at %></td>
            <td><% if user_signed_in? && current_user == item.user %>
            
                <%= link_to "Delete", collection_item_path(@collection, item), class: "btn btn-danger", style: '--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;', data: {"turbo-method": :delete} %>
            <% end %></td>
          </tr>
        
      <% end %>
    </tbody>
  </table>
</div>