<div class="row mt-5">
  <h3><%= @collection.name %> -> Items </h3>
</div>

<div class="container">
  <%= render 'items/form', collection: @collection %>
  <% @items.each do |item| %>
    <%= render 'items/item', collection: @collection, item: item %>
  <% end %>

</div>

<% if current_user %>
  <div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <h1><%= link_to 'Add Item', new_collection_item_path(@collection), class: 'btn btn-primary' %></h1>
  </div>
<% end %>

<div class="row mt-5 mb-5">
  <table class="table table-hover item-<%= @item.id %>">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Tag</th>
        <th scope="col">Create</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        
          <tr>
            <td><%= item.name %></td>
            <td><%= item.tag %></td>
            <td><%= item.created_at %></td>
          </tr>
        
      <% end %>
    </tbody>
  </table>
</div>