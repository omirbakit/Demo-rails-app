<div class="row mt-5">
  <h3><%= @collection.name %></h3>
  <h5>Author: <%= @collection.user.email %></h5>
  <hr />
  <h3> Items </h3>
</div>

<div class="row mt-1 mb-5">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Tag</th>
        <th scope="col">Created</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        
          <tr>
            <td><%= item.name %></td>
            <td><%= item.tag %></td>
            <td><%= item.created_at %></td>
          </tr>
        
      <% end %>
    </tbody>
  </table>
</div>