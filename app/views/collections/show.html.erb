<div class="row">
  <h1><%= @collection.name %></h1>
</div>

<div class="row">
  <%= form_with model: [Collection.new, Item.new], url: collections_path, local: true do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :tag %>
      <%= f.text_field :tag %>
    </div>

    <%= f.submit "Submit collection" %>
  <% end %>
</div>

<h1>Items</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Tag</th>
      <th scope="col">Create</th>
    </tr>
  </thead>
  <tbody>
    <% Item.find_each do |item| %>
      
        <tr>
          <th scope="row"><%= item.id %></th>
          <td><%= item.name %></td>
          <td><%= item.tag %></td>
          <td><%= item.created_at %></td>
        </tr>
      
    <% end %>
  </tbody>
</table>